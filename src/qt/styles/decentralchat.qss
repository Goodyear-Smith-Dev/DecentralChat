QLineEdit {
    background-color: #fff;
    color: #000;
}

QPushButton {
    background-color: @color-fg@;
    color: @color-text@;
    font-size: 10pt;
}

QLabel {
    font-size: 10pt;
    color: @color-text@;
}

QScrollArea .QWidget {
    background-color: @color-bg@;
}

QWidget#windowBody {
    background-color: @color-bg@;
}

Link {
    font-size: 10pt;
    color: #00e;
}

QScrollBar {
    width: 10px;
}

/* Create Account Page */

QWidget#p_cA_form {
    background-color: @color-bg2@;
}

QLabel#p_cA_title {
    font-size: 20pt;
}

QLabel#p_cA_invalid {
    color: #900;
}

/* Login Page */

QWidget#p_login_form {
    background-color: @color-bg2@;
}

QLabel#p_login_title {
    font-size: 20pt;
}

QLabel#p_login_invalid {
    color: #900;
}

/* Main Page */

QPushButton#p_main_addDest {
    qproperty-icon: url(@image-p_main_addDest@);
    background: transparent;
}

QPushButton#p_main_settings {
    qproperty-icon: url(@image-p_main_settings@);
    background: transparent;
}

/* Settings Page */

QWidget#p_sttn Link {
    color: @color-text@;
}

QPushButton#p_sttn_leave {
    qproperty-icon: url(@image-p_sttn_leave@);
    background-color: transparent;
}

QLabel#p_sttn_title {
    font-size: 17pt;
}

QWidget#p_sttn_categoryLinks {
    background-color: @color-bg2@;
}

QLabel#p_sttn_p_appr_title {
    font-size: 15pt;
}